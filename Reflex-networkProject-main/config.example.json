{
  "log": {
    "loglevel": "warning"
  },
  "inbounds": [
    {
      "tag": "reflex-in",
      "listen": "0.0.0.0",
      "port": 443,
      "protocol": "reflex",
      "settings": {
        "clients": [
          {
            "id": "YOUR-UUID-HERE",
            "policy": "http2-api"
          }
        ],
        "fallback": {
          "dest": 80
        }
      },
      "sniffing": {
        "enabled": false
      }
    }
  ],
  "outbounds": [
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {}
    },
    {
      "tag": "block",
      "protocol": "blackhole",
      "settings": {}
    }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      {
        "type": "field",
        "inboundTag": ["reflex-in"],
        "outboundTag": "direct"
      }
    ]
  }
}
